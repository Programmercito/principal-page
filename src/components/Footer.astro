---
import { Icon } from 'astro-icon/components';
const year = new Date().getFullYear();
---

<footer class="bg-gray-900 text-center py-8">
  <div class="container mx-auto px-6">
    <!-- Social Icons -->
    <div class="flex justify-center space-x-6 mb-6">
      <a href="#" aria-label="GitHub" class="social-link">
        <Icon name="mdi:github" class="w-8 h-8" />
      </a>
      <a href="#" aria-label="LinkedIn" class="social-link">
        <Icon name="mdi:linkedin" class="w-8 h-8" />
      </a>
      <a href="#" aria-label="Twitter" class="social-link">
        <Icon name="mdi:twitter" class="w-8 h-8" />
      </a>
    </div>
    
    <p class="text-gray-500 text-lg">&copy; {year} By <span class="font-bold text-cyan-400">Devcito</span></p>
  </div>
</footer>

<style>
  .social-link {
    @apply text-gray-400 transition-all duration-300;
  }
  .social-link:hover {
    @apply text-cyan-400;
    transform: scale(1.1);
  }
</style>
