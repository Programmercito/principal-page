---
import PricingCard from './PricingCard.astro';
---

<section id="hosting" class="py-20 bg-gray-800">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-white mb-12">Planes de Hosting</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <PricingCard
        title="Hosting Básico"
        price="$5"
        features={['1 Sitio Web', '10GB SSD', 'Email Básico', 'Certificado SSL Gratis']}
        isFeatured={false}
      />
      <PricingCard
        title="Hosting Plus"
        price="$10"
        features={['Sitios Ilimitados', '50GB SSD', 'Emails Ilimitados', 'Certificado SSL Gratis']}
        isFeatured={true}
      />
      <PricingCard
        title="Hosting Pro"
        price="$20"
        features={['Sitios Ilimitados', '100GB SSD', 'Emails Ilimitados', 'CDN Gratis']}
        isFeatured={false}
      />
    </div>
  </div>
</section>
