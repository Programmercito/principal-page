---

interface Props {
  img: string;
  title: string;
  description: string;
  link: string;
  tags?: string[];
  badge?: string;
  badgeColor?: 'cyan' | 'purple' | 'amber';
}

const { img, title, description, link, tags = [], badge, badgeColor = 'cyan' } = Astro.props;

const badgeColors = {
  cyan: 'badge-cyan',
  purple: 'badge-purple',
  amber: 'badge-amber',
};
---

<div class="product-card fade-in-element group" data-tilt>
  <!-- Glowing border effect -->
  <div class="card-glow"></div>
  <!-- Scanline effect -->
  <div class="card-scanline"></div>

  <!-- Image section -->
  <div class="card-image-wrap">
    <div class="card-image-bg"></div>
    <img src={img} alt={`Imagen de ${title}`} class="card-image" />
    <div class="card-image-overlay"></div>
    {badge && (
      <span class={`card-badge ${badgeColors[badgeColor]}`}>
        <span class="badge-dot"></span>
        {badge}
      </span>
    )}
  </div>

  <!-- Content -->
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>

    <!-- Tags -->
    {tags.length > 0 && (
      <div class="card-tags">
        {tags.map(tag => (
          <span class="card-tag">{tag}</span>
        ))}
      </div>
    )}

    <div class="card-footer">
      <a href={link} target="_blank" rel="noopener noreferrer" class="card-btn-premium">
        <span class="card-btn-shimmer"></span>
        <svg xmlns="http://www.w3.org/2000/svg" class="card-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <path d="m10 15 3-3-3-3"/>
        </svg>
        Ver Proyecto
      </a>
      <a href={link} target="_blank" rel="noopener noreferrer" class="card-arrow-link" aria-label={`Abrir ${title} en nueva pestaÃ±a`}>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
          <polyline points="15 3 21 3 21 9"/>
          <line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
      </a>
    </div>
  </div>
</div>

<script>
  // 3D Tilt effect
  document.querySelectorAll('[data-tilt]').forEach(card => {
    const el = card as HTMLElement;
    el.addEventListener('mousemove', (e: Event) => {
      const me = e as MouseEvent;
      const rect = el.getBoundingClientRect();
      const x = ((me.clientX - rect.left) / rect.width - 0.5) * 2;
      const y = ((me.clientY - rect.top) / rect.height - 0.5) * 2;
      el.style.transform = `perspective(700px) rotateY(${x * 8}deg) rotateX(${-y * 8}deg) translateY(-8px) scale(1.02)`;
    });
    el.addEventListener('mouseleave', () => {
      el.style.transform = '';
    });
  });
</script>

<style>
  .product-card {
    position: relative;
    background: rgba(8, 14, 32, 0.75);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.07);
    border-radius: 22px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: border-color 0.35s ease, box-shadow 0.35s ease;
    transform-style: preserve-3d;
    will-change: transform;
  }

  .product-card:hover {
    border-color: rgba(34, 211, 238, 0.35);
    box-shadow:
      0 30px 80px rgba(0, 0, 0, 0.5),
      0 0 50px rgba(34, 211, 238, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .card-glow {
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(34, 211, 238, 0.8), rgba(139,92,246,0.6), transparent);
    opacity: 0;
    transition: opacity 0.35s ease;
    z-index: 4;
  }
  .product-card:hover .card-glow { opacity: 1; }

  /* Scanline sweep on hover */
  .card-scanline {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(34, 211, 238, 0.03) 50%,
      transparent 100%
    );
    background-size: 100% 4px;
    animation: scanline 3s linear infinite;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 1;
  }
  .product-card:hover .card-scanline { opacity: 1; }
  @keyframes scanline {
    from { background-position: 0 -100%; }
    to { background-position: 0 100%; }
  }

  .card-image-wrap {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-image-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(34, 211, 238, 0.06), rgba(139, 92, 246, 0.06));
    transition: opacity 0.4s ease;
  }
  .product-card:hover .card-image-bg {
    background: linear-gradient(135deg, rgba(34, 211, 238, 0.1), rgba(139, 92, 246, 0.1));
  }

  .card-image {
    width: 160px; height: 160px;
    object-fit: cover;
    border-radius: 14px;
    filter: drop-shadow(0 0 14px rgba(34, 211, 238, 0.4));
    transition: all 0.45s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 2;
    position: relative;
  }
  .product-card:hover .card-image {
    filter: drop-shadow(0 0 28px rgba(34, 211, 238, 0.75));
    transform: scale(1.08) translateY(-4px);
  }

  .card-image-overlay {
    position: absolute; inset: 0;
    background:
      radial-gradient(ellipse 60% 60% at 50% 50%, rgba(34, 211, 238, 0.06), transparent),
      linear-gradient(180deg, transparent 55%, rgba(8, 14, 32, 0.9) 100%);
    z-index: 1;
  }

  .card-badge {
    position: absolute;
    top: 12px; right: 12px;
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 4px 12px;
    border-radius: 20px;
    z-index: 3;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .badge-dot {
    width: 5px; height: 5px;
    border-radius: 50%;
    animation: badge-pulse 1.8s ease-in-out infinite;
  }
  @keyframes badge-pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.4); }
  }

  .badge-cyan {
    background: rgba(34, 211, 238, 0.15);
    border: 1px solid rgba(34, 211, 238, 0.45);
    color: #22d3ee;
    box-shadow: 0 0 12px rgba(34,211,238,0.15);
  }
  .badge-cyan .badge-dot { background: #22d3ee; }

  .badge-purple {
    background: rgba(139, 92, 246, 0.15);
    border: 1px solid rgba(139, 92, 246, 0.45);
    color: #a78bfa;
    box-shadow: 0 0 12px rgba(139,92,246,0.15);
  }
  .badge-purple .badge-dot { background: #a78bfa; }

  .badge-amber {
    background: rgba(245, 158, 11, 0.15);
    border: 1px solid rgba(245, 158, 11, 0.45);
    color: #fbbf24;
    box-shadow: 0 0 12px rgba(245,158,11,0.12);
  }
  .badge-amber .badge-dot { background: #fbbf24; }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: 0.75rem;
  }

  .card-title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.35rem;
    font-weight: 700;
    color: white;
    letter-spacing: -0.01em;
    transition: color 0.3s ease;
  }
  .product-card:hover .card-title { color: #22d3ee; }

  .card-description {
    font-size: 0.875rem;
    color: #94a3b8;
    line-height: 1.65;
    flex: 1;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .card-tag {
    font-size: 0.68rem;
    font-weight: 600;
    padding: 4px 12px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.09);
    color: #64748b;
    letter-spacing: 0.05em;
    transition: all 0.25s ease;
  }
  .product-card:hover .card-tag {
    border-color: rgba(34, 211, 238, 0.2);
    color: #7dd3fc;
  }

  .card-footer {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .card-btn-premium {
    position: relative;
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: 'Outfit', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    padding: 0.65rem 1.25rem;
    border-radius: 50px;
    text-decoration: none;
    overflow: hidden;
    color: white;
    background: linear-gradient(135deg, #22d3ee 0%, #3b82f6 55%, #8b5cf6 100%);
    box-shadow:
      0 0 20px rgba(34, 211, 238, 0.35),
      0 3px 12px rgba(59, 130, 246, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.3s ease;
    animation: card-btn-pulse 3s ease-in-out infinite;
  }

  .card-btn-icon { width: 15px; height: 15px; flex-shrink: 0; }

  .card-btn-shimmer {
    position: absolute; top: 0; left: -100%; width: 55%; height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transform: skewX(-20deg);
    animation: card-shimmer 3.5s ease-in-out infinite;
    pointer-events: none;
  }
  @keyframes card-shimmer { 0% { left: -100%; } 40%, 100% { left: 160%; } }

  @keyframes card-btn-pulse {
    0%, 100% { box-shadow: 0 0 20px rgba(34,211,238,0.35), 0 3px 12px rgba(59,130,246,0.3), inset 0 1px 0 rgba(255,255,255,0.15); }
    50% { box-shadow: 0 0 38px rgba(34,211,238,0.55), 0 6px 22px rgba(59,130,246,0.45), inset 0 1px 0 rgba(255,255,255,0.18); }
  }

  .card-btn-premium:hover {
    transform: translateY(-3px) scale(1.04);
    box-shadow: 0 0 40px rgba(34,211,238,0.65), 0 10px 30px rgba(59,130,246,0.55), inset 0 1px 0 rgba(255,255,255,0.2);
  }

  .card-arrow-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 42px; height: 42px;
    border-radius: 12px;
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.1);
    color: #64748b;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }
  .card-arrow-link:hover {
    background: rgba(34,211,238,0.12);
    border-color: rgba(34,211,238,0.45);
    color: #22d3ee;
    transform: rotate(-8deg) scale(1.12);
    box-shadow: 0 0 15px rgba(34,211,238,0.2);
  }

  .fade-in-element {
    opacity: 0;
    transform: translateY(24px);
    animation: pc-fade-up 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  @keyframes pc-fade-up { to { opacity: 1; transform: translateY(0); } }
</style>
